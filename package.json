{
  "name": "webpack-es6-boilerplate",
  "version": "0.1.0",
  "author": "Vadim Markov",
  "repository": {
    "type": "git",
    "url": "https://github.com/markovv/webpack-es6-boilerplate.git"
  },
  "scripts": {
    "predev": "rimraf dist",
    "dev": "webpack-dev-server --open --mode development",
    "prebuild": "rimraf dist",
    "build": "webpack --mode production --display-error-details",
    "eslint": "eslint '**/*.js' --fix --quiet",
    "stylelint": "stylelint 'src/stylesheets/**/*.scss'; exit 0"
  },
  "dependencies": {
    "apache-server-configs": "^2.15.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-prettier": "^2.6.0",
    "normalize.css": "^8.0.0",
    "prettier": "^1.11.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.0.0",
    "stylelint": "^9.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.42",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.42",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "autoprefixer": "^8.2.0",
    "babel-loader": "^8.0.0-beta",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "csso-webpack-plugin": "^1.0.0-beta.10",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.1.0",
    "node-sass": "^4.8.3",
    "postcss-loader": "^2.1.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "webpack": "^4.4.1",
    "webpack-assets-manifest": "^3.0.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2"
  },
  "browserslist": ["> 1%", "Last 2 versions", "ie 11"],
  "babel": {
    "presets": ["@babel/preset-env"],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "eslintConfig": {
    "extends": ["airbnb-base", "prettier"],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "singleQuote": true,
          "printWidth": 120
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "eslintIgnore": [
    "**/*{.,-}min.js",
    "**/dist/*",
    "**/webpack/*",
    "**/node_modules/*",
    "webpack.config.js"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": ["stylelint-scss"]
  }
}
